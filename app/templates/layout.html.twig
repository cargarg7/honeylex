<!DOCTYPE html>
<html lang="en" class="{% block view_classes %}{% endblock %}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>{% block page_title %}{{ page_title|default(config('project.name')) }}{% endblock %}</title>
        <meta name="description" content="{{ config('project.name') }} - {{ config('project.description') }}">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('css/main.css') }}" rel="stylesheet" type="text/css" />
        {% block scripts %}{% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="{{ path('home') }}">{{ config('project.name') }}</a>
                    </div>
                </div>
            </nav>
            {% block header %}{% endblock %}
        </header>
        <div class="container-fluid">
        {% if errors is defined and errors|length > 0 %}
            <div class="alert alert-danger">
                <ul>
                    {% for error in errors %}
                    <li>{{ error }}</li>
                    {% endfor %}
                <ul>
            </div>
        {% endif %}
        {% block content %}{% endblock %}
        </div>
        <footer class="container-fluid" style="margin-bottom:10px">
            <hr>
            <div class="btn-group pull-right">
                {% if app.translator.fallbacklocales|length > 1 %}
                {% for locale in app.translator.fallbacklocales %}
                <button type="button" class="btn btn-xs {{ app.request_stack.currentRequest.locale == locale ? 'btn-info' : 'btn-default' }}">
                    <a href="{{ localise_route(locale) }}">{{ locale|trans([], 'locale') }}</a>
                </button>
                {% endfor %}
                {% endif %}
            </div>
            {% block footer %}{% endblock %}
            {% if config('appDebug') %}
            <div class="btn-group pull-left">
                <button type="button" class="btn btn-xs btn-default">Debug: on</button>
                <button type="button" class="btn btn-xs btn-default">Version: {{ config('appVersion') }}@{{ config('appEnv') }}</button>
                <button type="button" class="btn btn-xs btn-default"><a href="http://{{ app.request_stack.currentRequest.host }}:5984/_utils" target="_blank">CouchDb</a></button>
                <button type="button" class="btn btn-xs btn-default"><a href="http://{{ app.request_stack.currentRequest.host }}:9100" target="_blank">Elasticsearch</a></button>
                <button type="button" class="btn btn-xs btn-default"><a href="http://{{ app.request_stack.currentRequest.host }}:15672" target="_blank">RabbitMQ</a></button>
            </div>
            {% endif %}
        </footer>
        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/main.js') }}"></script>
    </body>
</html>
