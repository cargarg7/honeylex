{
    "name": "honeylex/honeylex",
    "type": "project",
    "description": "Honeybee CQRS & ES integration with the Silex framework.",
    "keywords": [ "honeybee", "silex", "symfony", "cqrs", "framework", "event sourcing" ],
    "homepage": "https://github.com/honeylex/honeylex",
    "license": "MIT",
    "authors": [
        {
            "name": "Hasham Ahmad",
            "email": "mr.hash@gmail.com",
            "homepage": "https://github.com/MrHash",
            "role": "Developer"
        },
        {
            "name": "Thorsten Schmitt-Rink",
            "email": "schmittrink@gmail.com",
            "homepage": "https://github.com/shrink0r",
            "role": "Developer"
        },
        {
            "name": "Honeylex Contributors",
            "homepage": "https://github.com/honeylex/honeylex/graphs/contributors"
        }
    ],
    "support": {
        "issues": "https://github.com/honeylex/honeylex/issues",
        "irc": "irc://irc.freenode.org/honeybee",
        "gitter": "https://gitter.im/honeybee/Lobby"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:FriendsOfHoneybee/php-amqplib.git"
        }
    ],
    "require": {
        "honeybee/honeybee": "dev-release/0.1",
        "nesbot/carbon": "^1.21",
        "php-amqplib/php-amqplib": "master@dev",
        "silex/silex": "^2.0",
        "swiftmailer/swiftmailer": "^5.4",
        "symfony/asset": "^2.7|^3.1",
        "symfony/browser-kit": "^2.7|^3.1",
        "symfony/class-loader": "^2.7|^3.1",
        "symfony/config": "^2.7|^3.1",
        "symfony/console": "^2.7|^3.1",
        "symfony/css-selector": "^2.7|^3.1",
        "symfony/finder": "^2.7|^3.1",
        "symfony/form": "^2.7|^3.1",
        "symfony/monolog-bridge": "^2.7|^3.1",
        "symfony/process": "^2.7|^3.1",
        "symfony/serializer": "^2.7|^3.1",
        "symfony/translation": "^2.7|^3.1",
        "symfony/twig-bridge": "^2.7|^3.1",
        "symfony/validator": "^2.7|^3.1",
        "twig/twig": "^1.30",
        "willdurand/negotiation": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "silex/web-profiler": "^2.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Honeybee\\FrameworkBinding\\Silex\\": "app/lib/"
        }
    },
    "bin": [ "bin/honeylex" ],
    "scripts": {
        "code-sniffer": "phpcs --extensions=php --standard=psr2 app tests",
        "code-sniffer-autofix": "phpcbf --standard=psr2 -d tabWidth=4 src",
        "honeylex": "docker-compose run --rm php_cli ./bin/honeylex --ansi",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:stop": "docker-compose stop",
        "docker:start": "docker-compose start",
        "docker:prune": [
            "docker volume rm $(docker volume ls -qf dangling=true)",
            "docker rm $(docker ps -a -q)"
        ]
    }
}