{
    "name": "honeylex/honeylex",
    "type": "project",
    "description": "Honeybee CQRS & ES integration with the Silex framework.",
    "keywords": [ "honeybee", "silex", "symfony", "cqrs", "framework", "event sourcing" ],
    "homepage": "https://github.com/honeylex/honeylex",
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Hasham Ahmad",
            "email": "mr.hash@gmail.com",
            "homepage": "https://github.com/MrHash",
            "role": "Developer"
        },
        {
            "name": "Thorsten Schmitt-Rink",
            "email": "schmittrink@gmail.com",
            "homepage": "https://github.com/shrink0r",
            "role": "Developer"
        },
        {
            "name": "Honeylex Contributors",
            "homepage": "https://github.com/honeylex/honeylex/graphs/contributors"
        }
    ],
    "support": {
        "issues": "https://github.com/honeylex/honeylex/issues",
        "irc": "irc://irc.freenode.org/honeybee",
        "gitter": "https://gitter.im/honeybee/Lobby"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:FriendsOfHoneybee/php-amqplib.git"
        }
    ],
    "require": {
        "honeybee/couchdb-adapter": "dev-master",
        "honeybee/elasticsearch2-adapter": "dev-master",
        "honeybee/honeybee": "dev-feature/disconnect as 0.2",
        "honeybee/rabbitmq3-adapter": "dev-master",
        "nesbot/carbon": "^1.21",
        "roave/security-advisories": "master@dev",
        "silex/silex": "^2.0",
        "swiftmailer/swiftmailer": "^5.4",
        "symfony/asset": "^3.2",
        "symfony/browser-kit": "^3.2",
        "symfony/class-loader": "^3.2",
        "symfony/config": "^3.2",
        "symfony/console": "^3.2",
        "symfony/css-selector": "^3.2",
        "symfony/finder": "^3.2",
        "symfony/form": "^3.2",
        "symfony/monolog-bridge": "^3.2",
        "symfony/process": "^3.2",
        "symfony/serializer": "^3.2",
        "symfony/translation": "^3.2",
        "symfony/twig-bridge": "^3.2",
        "symfony/validator": "^3.2",
        "twig/twig": "^1.30",
        "willdurand/negotiation": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "silex/web-profiler": "^2.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Honeylex\\": "app/lib/"
        }
    },
    "bin": [
        "bin/honeylex",
        "bin/honeylex.php"
    ],
    "scripts": {
        "code-sniffer": "phpcs --extensions=php --standard=psr2 app tests",
        "code-sniffer-autofix": "phpcbf --standard=psr2 -d tabWidth=4 src"
    }
}