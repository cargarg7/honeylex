; Common settings for trellis's code generator
cache_dir=../.codecache
deploy_dir=../../../../lib/{{ resource.name }}/Projection
template_directory=../../../../../../../var/trellis_templates/

; Integrate the plugin that is responsible for generating the module's elasticsearch mapping
[plugin:\Honeybee\FrameworkBinding\Silex\Console\Scafold\ElasticsearchMappingPlugin]
deploy_path=./codecache/{{ resource.name|snake }}-standard-{{ timestamp }}-mapping.json
index_name={{ crate.vendor|snake }}-{{ crate.name|snake }}
type_name={{ crate.vendor|snake }}-{{ crate.name|snake }}-{{ resource.name|snake }}
