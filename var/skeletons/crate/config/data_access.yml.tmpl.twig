#
# Connections that are used within the {{ crate.name }} crate.
---
storage_writers:
  {{ crate.prefix }}::version_list::event_source::writer:
    class: Honeybee\CouchDb\Storage\StructureVersionList\StructureVersionListWriter
    connection: {{ crate.prefix }}.event_source
  {{ crate.prefix }}::version_list::view_store::writer:
    class: Honeybee\Elasticsearch2\Storage\StructureVersionList\StructureVersionListWriter
    connection: honeybee.view_store
    settings:
      index: ${project.database.prefix}.{{ crate.vendor|snake }}-{{ crate.name|snake }}
      type: version_list

storage_readers:
  {{ crate.prefix }}::version_list::event_source::reader:
    class: Honeybee\CouchDb\Storage\StructureVersionList\StructureVersionListReader
    connection: {{ crate.prefix }}.event_source
  {{ crate.prefix }}::version_list::view_store::reader:
    class: Honeybee\Elasticsearch2\Storage\StructureVersionList\StructureVersionListReader
    connection: honeybee.view_store
    settings:
      index: ${project.database.prefix}.{{ crate.vendor|snake }}-{{ crate.name|snake }}
      type: version_list